{
    "name": "Code as a Crime Scene Workshop",
    "dockerFile": "Dockerfile",
    "forwardPorts": [],
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/crimebox,type=bind,consistency=cached",
        //"source=/Users/oleeskild/code,target=/workspaces/crimebox/code,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.java",
                "github.copilot"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
} 